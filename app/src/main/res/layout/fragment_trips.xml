<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:padding="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="20"
                  android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="wrap_content"
                      android:layout_height="100dp"
                      android:layout_gravity="center_horizontal"
                      android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="wrap_content"
                          android:layout_height="0dp"
                          android:layout_weight="70"
                          android:gravity="center_horizontal"
                          android:orientation="horizontal">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                              android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:orientation="vertical"
                              android:padding="10dp">

                    <Button
                        android:id="@+id/noOfTrips"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:clickable="false"
                        android:minHeight="1dp"
                        android:padding="5dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/noOfTripsHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="trips"
                        android:textAlignment="center"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                              android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:orientation="vertical"
                              android:padding="10dp">

                    <Button
                        android:id="@+id/noOfFollowers"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:minHeight="1dp"
                        android:padding="5dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/noOfFollowersHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="followers"
                        android:textAlignment="center"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                              android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:orientation="vertical"
                              android:padding="10dp">

                    <Button
                        android:id="@+id/noOfFollowing"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:minHeight="1dp"
                        android:padding="5dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/noOfFollowingHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="following"
                        android:textAlignment="center"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="wrap_content"
                          android:layout_height="0dp"
                          android:layout_weight="30"
                          android:gravity="center_horizontal"
                          android:orientation="vertical">

                <Button
                    android:id="@+id/followStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_button"
                    android:minHeight="1dp"
                    android:text="Follow"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:visibility="invisible"/>

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/followSeek"
                    android:visibility="invisible"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/userAbout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:textColor="@color/cardview_shadow_start_color"
        android:textSize="12sp"/>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/myTrips"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_gravity="center_horizontal"
              android:layout_weight="70"
              android:background="@color/cardview_shadow_end_color"
              android:horizontalSpacing="5dp"
              android:numColumns="auto_fit"
              android:padding="5dp"
              android:stretchMode="columnWidth"
              android:verticalSpacing="5dp"/>
</LinearLayout>