<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="#FFFFFF"
                tools:context=".UILayer.LoginActivity">

    <LinearLayout
        android:id="@+id/signins"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_fb_login"
            android:layout_width="match_parent"
            android:text="Facebook"
            android:textStyle="bold"
            android:textColor="@color/com_facebook_blue"
            android:textSize="20dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Google"
            android:textStyle="bold"
            android:textColor="#dd4b39"
            android:textSize="20dp"
            android:background="@color/white"
            android:layout_height="0dp" />
    </LinearLayout>

    <com.jrummyapps.android.widget.AnimatedSvgView
        android:id="@+id/animated_svg_view"
        android:layout_above="@+id/signins"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        app:animatedSvgFillColors="@array/endless_colors"
        app:animatedSvgTraceColors="@array/endless_colors_reversed"
        app:animatedSvgTraceResidueColors="@array/endless_colors"
        app:animatedSvgGlyphStrings="@array/endless_paths"
        app:animatedSvgFillStart="4700"
        app:animatedSvgTraceMarkerLength="60"
        app:animatedSvgFillTime="2000"
        app:animatedSvgImageSizeX="710"
        app:animatedSvgImageSizeY="600"
        app:animatedSvgTraceTime="5000"
        app:animatedSvgTraceTimePerGlyph="5000"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:src="@drawable/ic_name_styled_green"/>
</RelativeLayout>